<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    android:paddingTop="8dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:background="@color/light_grey"
        android:backgroundTint="@color/light_grey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:paddingHorizontal="24dp"
        android:text="@string/sleep_timer"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timer_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/sf_pro"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/timer_off"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timer_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/sf_pro"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/timer_5_min"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timer_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/sf_pro"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/timer_15_min"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timer_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/sf_pro"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/timer_30_min"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timer_45"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/sf_pro"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/timer_45_min"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timer_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/sf_pro"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/timer_60_min"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/timer_end_of_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:fontFamily="@font/sf_pro"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="@string/timer_end_of_chapter"
        android:textColor="@color/black"
        android:textSize="16sp" />

</LinearLayout>