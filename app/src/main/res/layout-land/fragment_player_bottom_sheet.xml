<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:paddingTop="12dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/bg_bottom_sheet">

    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E0E0"
        android:backgroundTint="#E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_content_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_book_cover"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_large_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_book"
                android:contentDescription="@null" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_episode_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/cv_book_cover"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cv_book_cover"
            tools:text="Ep 2: Game of the Darkness" />

        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf_pro"
            android:textColor="@color/light_grey"
            android:textSize="16sp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/tv_episode_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_episode_title"
            tools:text="Flower Books" />

        <SeekBar
            android:id="@+id/player_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:progressTint="@color/green"
            android:thumbTint="@color/green"
            app:layout_constraintStart_toStartOf="@id/tv_episode_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_book_author" />

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sf_pro"
            android:textColor="@color/green"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/player_seek_bar"
            app:layout_constraintTop_toBottomOf="@+id/player_seek_bar"
            tools:text="12:04" />

        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sf_pro"
            android:textColor="@color/light_grey"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/player_seek_bar"
            app:layout_constraintTop_toBottomOf="@+id/player_seek_bar"
            tools:text="25:30" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/cv_book_cover"
            app:layout_constraintStart_toStartOf="@id/player_seek_bar"
            app:layout_constraintEnd_toEndOf="@id/player_seek_bar"
            app:layout_constraintTop_toBottomOf="@id/player_seek_bar">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_prev_card"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="0"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/btn_prev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/previous"
                    android:padding="12dp"
                    android:src="@drawable/ic_music_back"
                    app:tint="@color/light_grey" />
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:contentDescription="@string/play"
                android:stateListAnimator="@null"
                android:src="@drawable/ic_player_icon"
                app:backgroundTint="@color/green"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"
                app:fabCustomSize="64dp"
                app:tint="@color/white" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_next_card"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="0"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/next"
                    android:padding="12dp"
                    android:src="@drawable/ic_music_forward"
                    app:tint="@color/light_grey" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/empty_player_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivNothingPlaying"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_player_icon"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/light_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/sf_pro"
            android:text="@string/nothing_is_playing"
            android:textColor="@color/light_grey"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivNothingPlaying" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/pager_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_content_group">

        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/green_circle_background"
            android:layout_marginEnd="6dp"/>
        <View
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="#E0E0E0"
            android:backgroundTint="#E0E0E0"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>