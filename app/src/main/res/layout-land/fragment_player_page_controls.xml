<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_content_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingHorizontal="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_book_cover"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_large_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_book"
            android:contentDescription="@null" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_episode_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/cv_book_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cv_book_cover"
        tools:text="Ep 2: Game of the Darkness" />

    <TextView
        android:id="@+id/tv_book_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/light_grey"
        android:textSize="16sp"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/tv_episode_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_episode_title"
        tools:text="Flower Books" />

    <SeekBar
        android:id="@+id/player_seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:progressTint="@color/green"
        android:thumbTint="@color/green"
        android:secondaryProgressTint="@color/light_grey"
        app:layout_constraintStart_toStartOf="@id/tv_episode_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_book_author"
        app:layout_constraintBottom_toTopOf="@id/controls_layout"/>

    <TextView
        android:id="@+id/tv_current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/green"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/player_seek_bar"
        app:layout_constraintTop_toBottomOf="@+id/player_seek_bar"
        tools:text="12:04" />

    <TextView
        android:id="@+id/tv_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sf_pro"
        android:textColor="@color/light_grey"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/player_seek_bar"
        app:layout_constraintTop_toBottomOf="@+id/player_seek_bar"
        tools:text="25:30" />

    <LinearLayout
        android:id="@+id/controls_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@id/cv_book_cover"
        app:layout_constraintStart_toStartOf="@id/player_seek_bar"
        app:layout_constraintEnd_toEndOf="@id/player_seek_bar"
        app:layout_constraintTop_toBottomOf="@id/tv_current_time">

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_prev_card"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/btn_prev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/previous"
                android:padding="12dp"
                android:src="@drawable/ic_music_back"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/play"
                android:stateListAnimator="@null"
                android:src="@drawable/ic_play"
                app:backgroundTint="@color/green"
                app:elevation="0dp"
                app:pressedTranslationZ="0dp"
                app:fabCustomSize="64dp"
                app:tint="@color/white" />

            <ProgressBar
                android:id="@+id/loading_progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/green"
                tools:visibility="visible"/>

        </FrameLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_next_card"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            app:cardBackgroundColor="@color/light_grey"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/next"
                android:padding="12dp"
                android:src="@drawable/ic_music_forward"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>